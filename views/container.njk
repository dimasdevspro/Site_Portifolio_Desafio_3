{% extends "layout.njk" %}

{% block content %}

    <div class="infos">
        <h1>Blogs</h1>
        <h2>Posts preferidos</h2>
        <h3>Confira esses 3 posts preferidos<h3></div>
            <section class="cards">

                {% for item in items%}

                    <div class="card" id={{item.id}}>
                        <div class="card_container">
                            <img src={{item.img_url}} alt="Imagem de {{itme.id}}">
                                <p>{{item.title_card_content}}</p>
                                <p>{{item.author_card_info}}</p>
                                <p>{{item.time_card_timetoread}}</p>
                        </div>
                    </div>

                {% endfor %}

            </section>
            <div class="modal_overlay">
                <div class="modal">
                    <a class="close_modal">
                        <i class="material-icons" alt="close">
                            X
                        </i>
                    </a>
                    <a class="maximize_modal" alt="maximize">
                        <i class="material-icons">
                            M
                        </i>
                    </a>
                    <a class="minimize_modal" alt="minimize">
                        <i class="material-icons">
                            _
                        </i>
                    </a>
                    <div class="modal_content">
                        <iframe src="https://blog.rocketseat.com.br/" frameborder="0"></iframe>
                    </div>

                </div>
            </div>
            <script src="script.js"></script>

        {% endblock %}